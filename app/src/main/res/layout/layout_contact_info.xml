<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contact_info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/contact_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp">

        <TextView
                android:id="@+id/contact_info_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                style="@style/bodyCasualBold"
                android:textSize="20dp"
                android:text="Contact Information"/>

        <TextView
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               style="@style/body"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:id="@+id/address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               style="@style/body"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:id="@+id/phoneNumber_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               style="@style/body"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emergency_contact"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                style="@style/title"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/emergencyContact_firstName_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               style="@style/body"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:id="@+id/emergencyContact_lastName_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               style="@style/body"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:id="@+id/emergencyContact_relationship_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               style="@style/body"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:id="@+id/emergencyContact_phoneNumber_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               style="@style/body"/>
    </LinearLayout>
</LinearLayout>